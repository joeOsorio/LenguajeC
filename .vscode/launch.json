{
  "version": "2.0.0",
  "configurations": [
    {
      "name": "Depuración C (GCC/GDB) - Estricta",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false, // Cambiado a false para mayor productividad
      "cwd": "${fileDirname}",
      "environment": [
        {
          "name": "PATH",
          "value": "${env:PATH};C:\\Strawberry\\c\\bin" // Asegura acceso a herramientas
        }
      ],
      "externalConsole": true, // Consola externa para mejor manejo de I/O
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\Strawberry\\c\\bin\\gdb.exe",
      "preLaunchTask": "C/C++: Compilación con (C90 estricto)", // Coincide con la tarea mejorada
      "logging": {
        "moduleLoad": false,
        "engineLogging": false,
        "trace": false
      },
      "setupCommands": [
        {
          "description": "Habilitar impresión legible en GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Sintaxis Intel para desensamblado",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        {
          "description": "Mostrar valores de registros durante depuración",
          "text": "-gdb-set print registers on",
          "ignoreFailures": true
        }
      ],
      "visualizerFile": "${workspaceFolder}/.vscode/natvis/standard.natvis", // Opcional para visualizaciones personalizadas
      "showDisplayString": true // Muestra valores de variables de forma más descriptiva
    },
    {
      "name": "Depuración C (GCC/GDB) - Rápida",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false, // Usa terminal integrada para depuración rápida
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\Strawberry\\c\\bin\\gdb.exe",
      "preLaunchTask": "C/C++: Compilación básica (sin warnings estrictos)", // Usa la tarea rápida
      "setupCommands": [
        {
          "description": "Habilitar impresión legible en GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
